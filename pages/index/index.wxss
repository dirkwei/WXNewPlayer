.title{
  font-size: 14pt;
  color:#353535;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-weight: 500;
  box-shadow: 0 2px 0 #888888;
}
.title text{
  margin-left: 5px;
}
.ImgBox{
  margin-bottom: 5px;
}
.songselect{
  background: #f4f4f4;
}
.songItem{
  display: flex;
  flex-direction: row;
  padding: 10px 15px;
  border-bottom: 1px solid rgba(255,255,255,.15);
}
.imgTitle{
  width: 50px;
  height:50px;
}
.smallImg{
  width:100%;
  border-radius: 50%;
  border:1px solid #888888;
}
.textTitle{
  flex:1;
